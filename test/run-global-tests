;;; Commentary:

;; Script to run Scame integrations tests:
;; - Perform a fresh installation using cask
;; - Launch unit tests

;;; Code:


(let ((current-directory (file-name-directory load-file-name)))
  (add-to-list 'load-path current-directory)
  (require 'test-helper))

(defmacro with-test-sandbox (&rest body)
  `(unwind-protect
       (condition-case nil ;ex
           (let ((user-emacs-directory go-test-sandbox-path))
             (when (f-dir? go-test-sandbox-path)
               (f-delete go-test-sandbox-path 'force))
             (f-mkdir go-test-sandbox-path)
             (cleanup-load-path)
             (message (ansi-yellow "[gotest] Load library"))
             (require 'gotest (s-concat go-test-source-dir "/gotest.el"))
             (message (ansi-green "[gotest] Execute unit tests"))
             ,@body)
         )))
         ;; (error
         ;;  (message (ansi-red "[Scame] Error during unit tests : %s" ex))))))

;; run tests
(with-test-sandbox
 (load-unit-tests go-test-testsuite-dir)
 (ert-run-tests-batch-and-exit t))
